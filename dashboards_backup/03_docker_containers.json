{
  "uid": "docker_containers",
  "title": "Docker Containers Overview",
  "schemaVersion": 36,
  "panels": [
    {
      "type": "graph",
      "title": "Container CPU Usage (%)",
      "targets": [
        { "expr": "rate(container_cpu_usage_seconds_total{image!=''}[1m]) * 100", "legendFormat": "{{container}}" }
      ],
      "gridPos": { "x": 0, "y": 0, "w": 24, "h": 8 }
    },
    {
      "type": "graph",
      "title": "Container Memory Usage (MB)",
      "targets": [
        { "expr": "container_memory_usage_bytes / 1024 / 1024", "legendFormat": "{{container}}" }
      ],
      "gridPos": { "x": 0, "y": 8, "w": 24, "h": 8 }
    }
  ]
}
